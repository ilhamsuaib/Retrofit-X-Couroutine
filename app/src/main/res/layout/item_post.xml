<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:maxLines="2"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Post Title" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:textSize="12sp"
        tools:text="Coroutines are a neat new feature of the Kotlin language that allow us to write asynchronous code in a more idiomatic way. â€” This also means you can write asynchronous code the same way you would normally write synchronous code in your project." />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#eee" />
</LinearLayout>